<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_content_title"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/activity_content_title"
        android:background="@color/colorPrimary"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:text="@string/activity_content"
        android:textSize="20sp" />

    <Button
        android:id="@+id/attend_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="參加活動"
        android:translationX="40dp"
        android:translationY="50dp" />
    <Button
        android:id="@+id/chatroom_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="聊天室"
        android:translationX="165dp"
        android:translationY="0dp" />

    <Button
        android:id="@+id/follow_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="關注活動"
        android:translationX="290dp"
        android:translationY="-50dp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:translationX="120dp" />
</LinearLayout>